{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "./src/app/screens/*",
        "./src/app/(tabs)/*",
        "./src/components/*",
        "./src/lib/service/*",
        "./src/lib/types/*",
        "./src/validators",
        "./src/components/icons/*",
        "./src/constants/*",
        "./src/components/layout/*"
      ],
      "appConstants/*": ["./constants/*"],
      "appConstants": ["./constants"],
      "atoms": ["./components/atoms"],
      "layouts": ["./components/layouts"],
      "public": ["./src/public/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": ["global.d.ts", "**/*.ts", "**/*.tsx"]
}
